<html>
  <head>
    <title>Epic Steam Roulette - <%= username %></title>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  </head>
  <body ng-app="EpicSteamRoulette" ng-controller="RouletteCtrl" ng-init="games = <%= games %>">
    <div>
      <button ng-click="pickGame()">Pick a game!</button>
    </div>
    <div ng-repeat="game in games.names">
      {{game.name}}
    </div>
  </body>
</html>
